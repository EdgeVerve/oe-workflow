{
  "name": "WorkflowMapping",
  "base": "WorkflowBaseEntity",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins":{
    "SoftDeleteMixin" : false
  },
  "properties": {   
    "engineType": {
      "type": "string",
      "required": true
    },
    "workflowBody": {
      "type": "object",
      "required": true
    },
    "modelName" :{
      "type": "string",
      "required": true
    },
    "actualModelName" :{
      "type": "string",
      "required": false,
      "hidden" : true
    },
    "operation" : {
      "type": "string",
      "required": true
    },
    "version" : {
      "type": "string",
      "required": true,
      "default": "v1"
    },
    "wfDependent" : {
      "type": "boolean",
      "required": true
    },
    "makersRecall" : {
      "type": "boolean",
      "default": false
    },
    "privilegedUsers" : {
      "type": "array",
      "required": false
    },
    "privilegedRoles": {
      "type": "array",
      "required": false
    },
    "remote":{
      "type":"object",
      "required": false
    },
    "mappingName":{
      "type":"string"
    }
  },
  "relations": {
  },
  "validations": []
}
